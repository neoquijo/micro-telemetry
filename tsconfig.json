{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": "src",
    "outDir": "dist",
    "module": "Node16",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": [
      "es5",
      "es6",
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}