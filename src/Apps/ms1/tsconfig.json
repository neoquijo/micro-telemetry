{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "module": "ES6",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es6",
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".eslintrc.js"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}